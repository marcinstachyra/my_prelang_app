<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => Invoice %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:number) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:issue_date) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.issue_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:due_date) %></dt>
      <dd><pre class="prettyprint"><%= @invoice.due_date %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              invoices_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_invoice_path(@invoice), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              invoice_path(@invoice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

